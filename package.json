{
  "name": "vue-typescript-demo",
  "description": "A vue project",
  "version": "1.0.0",
  "author": "masonz <masonzone@gmali.com>",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "scripts": {
    "start": "webpack-dev-server --port 3002 --inline --content-base",
    "build:development": "cross-env NODE_ENV=development npm run compile",
    "build:production": "cross-env NODE_ENV=production npm run compile",
    "build:parts": "npm run sass && npm run compile",
    "ci:teamcity": "karma --env=tc start karma.coverage.js && npm run coverage:remap",
    "ci:jenkins": "karma --env=jk start karma.coverage.js && npm run coverage:remap",
    "clean": "rimraf dist && rimraf coverage",
    "compile": "webpack --config webpack.config.js",
    "coverage": "npm run coverage:run && npm run coverage:remap && npm run coverage:open",
    "coverage:open": "opn coverage/lcov-report/index.html",
    "coverage:remap": "remap-istanbul -i coverage/coverage-final.json -o coverage/html-ts -t html",
    "coverage:run": "cross-env NODE_ENV=development",
    "dev": "webpack-dev-server --hot --inline",
    "lint": "tslint src/**/*.ts",
    "lint-fix": "tslint --fix src/**/*.ts -t verbose",
    "serve": "http-server dist/ -o",
    "test": "jest --clearCache && --verbose",
    "test:debug": "cross-env NODE_ENV=development karma start karma.debug.js",
    "test:watch": "cross-env NODE_ENV=development karma start karma.unit.js --singleRun=false --auto-watch"
  },
  "jest": "./jest.config.js",
  "dependencies": {
    "@types/jest": "^21.1.5",
    "axios": "^0.16.2",
    "bootstrap": "^3.3.7",
    "html-loader": "^0.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "lodash.merge": "^4.6.0",
    "ts-jest": "^21.1.4",
    "vue": "~2.4.4",
    "vue-class-component": "^5.0.2",
    "vue-multiselect": "^2.0.3",
    "vue-property-decorator": "~5.2.1",
    "vue-router": "~2.7.0",
    "vue-test-utils": "^1.0.0-beta.4",
    "vue-typescript-jest": "^0.3.0",
    "vuex": "~2.4.0"
  },
  "devDependencies": {
    "@types/node": "~8.0.24",
    "autoprefixer": "^7.1.2",
    "awesome-typescript-loader": "~3.2.3",
    "axios-mock-adapter": "^1.9.0",
    "bootstrap-sass": "^3.3.7",
    "compression-webpack-plugin": "~1.0.0",
    "copy-webpack-plugin": "~4.0.1",
    "cross-env": "~5.0.5",
    "css-loader": "^0.28.5",
    "es6-promise": "~4.1.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.11.2",
    "html-loader-jest": "^0.2.1",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "~0.10.0",
    "istanbul-instrumenter-loader": "~3.0.0",
    "jest-vue-preprocessor": "^1.3.1",
    "json-loader": "~0.5.7",
    "karma-webpack": "~2.0.4",
    "lodash.merge": "~4.6.0",
    "minimist": "~1.2.0",
    "ncp": "~2.0.0",
    "node-sass": "~4.5.3",
    "opn-cli": "~3.1.0",
    "postcss-loader": "^2.0.6",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "raw-loader": "~0.5.1",
    "rimraf": "~2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "tslint": "~5.6.0",
    "tslint-loader": "~3.5.3",
    "typescript": "~2.4.2",
    "url-loader": "^0.5.9",
    "vue-chart-js": "^1.4.1",
    "vue-loader": "^13.3.0",
    "vue-template-compiler": "^2.4.4",
    "webpack": "~3.5.5",
    "webpack-dev-server": "~2.7.1"
  }
}
